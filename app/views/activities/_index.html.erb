
<h1>Listing Activities</h1>

<table class="table  table striped table-bordered table-condensed">
  <thead style="background-color:cadetblue;color:white">
    <tr>
      <th>Activity name</th>
      <th>Activity content</th>
      <th>Grade</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody style="font-weight:bold">
    <% @activities.each do |activity| %>
      <tr>
        <td><%= activity.activity_name %></td>
        <td><%= activity.activity_content %></td>
        <td><%= activity.grade %></td>
        <td><%= link_to activity_path(activity),class: 'btn btn-primary btn-lg' do %>
            <i class="glyphicon glyphicon-eye-open"></i> 
        <% end %>
        </td>
        <td><%= link_to edit_activity_path(activity), class: 'btn btn-warning btn-lg' do %>
            <i class="glyphicon glyphicon-pencil"></i>
        <% end %></td>
        <td><%= link_to activity_path(activity), method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-danger btn-lg' do%>
          <i class="glyphicon glyphicon-trash"></i>
        <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

  <%= link_to new_activity_path(id: @course.id) do%>
    <i class="glyphicon glyphicon-plus" ></i> Add Activity
    <% end %>
