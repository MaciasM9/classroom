
<h1>Listing Projects</h1>

<table class="table  table striped table-bordered table-condensed">
  <thead style="background-color:cadetblue;color:white">
    <tr>
      <th>Project name</th>
      <th>Project description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody style="font-weight:bold">
  <% if @projects %>
      <tr>
        <td><%= @projects.project_name %></td>
        <td><%= @projects.project_description %></td>
        <td><%= link_to project_path(@projects),class: 'btn btn-primary btn-lg' do %>
            <i class="glyphicon glyphicon-eye-open"></i> 
        <% end %>
        </td>
        <td><%= link_to edit_project_path(@projects), class: 'btn btn-warning btn-lg' do %>
            <i class="glyphicon glyphicon-pencil"></i>
        <% end %></td>
        <td><%= link_to project_path(@projects), method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-danger btn-lg' do%>
          <i class="glyphicon glyphicon-trash"></i>
        <% end %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>
<br>
    <%= link_to new_project_path(id: @course.id) do%>
    <i class="glyphicon glyphicon-plus" ></i> Add Project
    <% end %>
