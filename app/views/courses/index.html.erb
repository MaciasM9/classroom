
<div class="row">
  <div class="col-md-8 col-md-offset-2">
      <div class="alert">
  <p id="notice"><%= notice %></p>  
</div>
      <h1>Listing Courses</h1>

<table class="table  table-striped table-bordered table-condensed">
  <thead style="background-color:cadetblue;color:white">
    <tr>
      <th>Course name</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody style="font-weight:bold">
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.course_name %></td>
        <td><%= course.content %></td>
        <td><%= link_to course_path(course),class: 'btn btn-primary btn-lg' do %>
            <i class="glyphicon glyphicon-eye-open"></i> 
        <% end %>
        </td>
        <td><%= link_to edit_course_path(course), class: 'btn btn-warning btn-lg' do %>
            <i class="glyphicon glyphicon-pencil"></i>
        <% end %></td>
        <td><%= link_to course_path(course), method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-danger btn-lg' do%>
          <i class="glyphicon glyphicon-trash"></i>
        <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_course_path,class: 'btn btn-success' do%>
    <i class="glyphicon glyphicon-plus"></i> Add Course
<% end %>
    
  </div>

</div>
